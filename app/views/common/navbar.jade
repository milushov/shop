nav.navbar.navbar-inverse.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') Shop

    #navbar.collapse.navbar-collapse
      ul.nav.navbar-nav
        li(class="#{activeSection('/products')}")
          a(href='/products') Products
        li(class="#{activeSection('/categorys')}")
          a(href='/categorys') Categories
        li(class="#{activeSection('/merchants')}")
          a(href='/merchants') Merchants

      .col-sm-3.col-md-3.pull-right
        form.navbar-form(role='search' action='/products')
          .input-group
            input.form-control(type='text', placeholder='search product', name='q')
            .input-group-btn
              button.btn.btn-default(type='submit')
                i.glyphicon.glyphicon-search
