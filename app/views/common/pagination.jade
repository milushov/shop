if pagesNumbers
  .text-center
    ul.pagination
      if prevPage
        li: a(href="?page=#{prevPage}", aria-label='Previous')
          span(aria-hidden='true') &laquo;

      for pageN in pagesNumbers
        li(class="#{pageN == curPage ? 'active' : ''}")
          a(href="?page=#{pageN}") #{pageN}

      if nextPage
        li: a(href="?page=#{nextPage}", aria-label='Next')
          span(aria-hidden='true') &raquo;
